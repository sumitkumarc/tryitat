<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <gradient
            android:angle="360"
            android:endColor="#FF4AFF"
            android:gradientRadius="360"
            android:startColor="#8B5CB2"
            android:type="sweep" />
        <stroke
            android:width="2dp"
            android:color="#8B5CB2" />
        <corners android:radius="@dimen/_50sdp"/>
    </shape>
</item>
<item
    android:bottom="2dp"
    android:left="2dp"
    android:right="2dp"
    android:top="2dp">
    <shape android:shape="rectangle" >
        <solid android:color="#fff" />
        <corners android:radius="@dimen/_50sdp"/>
    </shape>
</item>

</layer-list>