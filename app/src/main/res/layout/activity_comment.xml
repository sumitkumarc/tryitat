<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.comment.CommentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_setting"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="@id/app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/app_logo"/>
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/app_logo_2"
                android:layout_marginVertical="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_person"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/gray"
        android:layout_marginVertical="@dimen/_24sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/user_img"
        app:layout_constraintTop_toTopOf="@id/user_img"
        app:layout_constraintEnd_toStartOf="@id/btn_follow"
        app:layout_constraintBottom_toBottomOf="@id/user_img"/>

    <TextView
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/user_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_img"
        app:layout_constraintBottom_toBottomOf="@id/user_img"/>

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/user_img"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/like_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_elpse"
        android:padding="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/like_counter">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_like_post"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/like_counter"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="wrap_content"
        app:tint="@color/gray"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/ic_circle_elpse_border"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintBottom_toBottomOf="@id/like_view"
        app:layout_constraintStart_toEndOf="@id/like_view"
        app:layout_constraintEnd_toStartOf="@id/comment_view">

        <TextView
            android:id="@+id/like_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:paddingVertical="@dimen/_4sdp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_elpse"
        android:padding="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintStart_toEndOf="@id/like_counter"
        app:layout_constraintEnd_toStartOf="@id/comment_counter">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_comment_post"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_counter"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="wrap_content"
        app:tint="@color/gray"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/ic_circle_elpse_border"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintBottom_toBottomOf="@id/comment_view"
        app:layout_constraintStart_toEndOf="@id/comment_view"
        app:layout_constraintEnd_toStartOf="@id/tried_view">

        <TextView
            android:id="@+id/comment_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:paddingVertical="@dimen/_4sdp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tried_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_elpse"
        android:padding="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintStart_toEndOf="@id/comment_counter"
        app:layout_constraintEnd_toStartOf="@id/tried_counter">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_tried_post"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tried_counter"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="wrap_content"
        app:tint="@color/gray"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/ic_circle_elpse_border"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        app:layout_constraintBottom_toBottomOf="@id/tried_view"
        app:layout_constraintStart_toEndOf="@id/tried_view"
        app:layout_constraintEnd_toStartOf="@id/location_view">

        <TextView
            android:id="@+id/tried_count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textAlignment="center"
            android:paddingVertical="@dimen/_4sdp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_circle_elpse"
        app:layout_constraintTop_toTopOf="@id/comment_view"
        app:layout_constraintStart_toEndOf="@id/tried_counter"
        app:layout_constraintBottom_toBottomOf="@id/comment_view"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_location_post"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/location_view"
        android:layout_marginVertical="@dimen/_16sdp"/>
    
    <EditText
        android:id="@+id/comment_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/write_comment_here"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/send_btn"/>

    <ImageView
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:src="@drawable/ic_send_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/comment_et"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_rcv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/comment_et"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>